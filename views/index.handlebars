<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">WX Underground Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home
                <span class="sr-only">(current)</span>
            </a>
            <a class="nav-item nav-link" href="/saved">Saved Articles</a>
            <a href="/scrape" class="btn btn-danger active" role="button" aria-pressed="true">Scrape WX</a>
        </div>
    </div>
</nav>
<div class="container-fluid">
        <div class="jumbotron text-center background-image">
            <div class="overlay">
                <div class="caption">
                    <h1 class="display-1">WX Underground Scraper</h1>
                </div>
            </div>
        </div>
    <div class=row>
        <div class="col-12">
            {{#if articles}}
            {{#each articles}}
                <div class="card">
                    <div class="card-header text-white bg-primary no-articles">
                      <h3>
                        <a href={{link}} target="_blank" class="text-white">
                            {{title}}</a>
                        <a><button id="{{_id}}" class="float-right btn btn-warning save-btn">Save Article</button></a>
                      </h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            {{summary}}
                        </p>
                    </div>
                </div>
            {{/each}}
            {{else}}
                <div class="card text-white bg-danger w-90 p-1">
                    <div class="card-body text-center">
                        There are no new articles.
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>